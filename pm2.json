{
  "apps": [{
    "name"            : "aifirst-api",
    "script"          : "app.js",
    "watch"           : false,
    "ignore_watch"    : ["node_modules", "log"],
    "exec_mode"       : "fork",
    "instances"       : 1,
    "log_date_format" : "YYYY-MM-DD HH:mm:ss",
    "error_file"      : "log/err.log",
    "out_file"        : "log/out.log",
    "log_file"        : "log/console.log",
    "merge_logs"      : true
  }]
}
